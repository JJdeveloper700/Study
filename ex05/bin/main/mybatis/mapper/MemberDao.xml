<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ex05.dao.IMemberDao">

<insert id="regist">
INSERT INTO tbl_member VALUES(#{member.id}, #{member.pw},#{member.name})
</insert>

<select id="LoginCheck" resultType="com.example.ex05.dto.MemberDto">

SELECT * FROM tbl_member WHERE id = #{id} and pw= #{pw}

</select>

<select id="idCheck" resultType="_int">

SELECT COUNT(*)FROM tbl_member WHERE id = #{id}

</select>

</mapper>